document.addEventListener("DOMContentLoaded", () => {
//storage af billeder

const photos = [
  { src: "images/cowboy.png", title: "First", info: "Info 1 " },
  { src: "images/cowboy.png", title: "Second", info: "Info 2" },
  { src: "images/cowboy.png", title: "Third", info: "Info 3" },
  { src: "images/cowboy.png", title: "Fourth", info: "Info 4"},
  { src: "images/cowboy.png", title: "Fifth", info: "Info 5"}
];

let currentIndex = 0;

const slots = document.querySelectorAll(".image-slot");
const popover = document.getElementById("popover");
const infoBtn = document.getElementById("infoBtn");

// slots[0] → prev
// slots[1] → current
// slots[2] → next


//modulo (%) efterlader remainderen efter at minusse de 2 ting
function render() {
  const prevIndex = (currentIndex - 1 + photos.length) % photos.length;
  const nextIndex = (currentIndex + 1) % photos.length;

  slots[0].querySelector("img").src = photos[prevIndex].src;

  slots[1].querySelector("img").src = photos[currentIndex].src;
  slots[1].querySelector("h3").textContent = photos[currentIndex].title;

  slots[2].querySelector("img").src = photos[nextIndex].src;
}

function rotateForward() {
  currentIndex = (currentIndex + 1) % photos.length;
  render();
}

function rotateBackward() {
  currentIndex = (currentIndex - 1 + photos.length) % photos.length;
  render();
}



//knappernes kode
document.getElementById("forward").addEventListener("click", rotateForward);
document.getElementById("back").addEventListener("click", rotateBackward);

slots[0].addEventListener("click", rotateBackward);
slots[2].addEventListener("click", rotateForward);


//kode for at klikke videre på billederne selv
document.getElementById("prev").addEventListener("click", rotateBackward);
document.getElementById("next").addEventListener("click", rotateForward);


//info knap tied til currentindex 
infoBtn.addEventListener("click", () => {
  popover.innerHTML = `
    <h4>${photos[currentIndex].title}</h4>
    <p>${photos[currentIndex].info}</p>
  `;
  popover.classList.toggle("hidden");
});

  render();
});
